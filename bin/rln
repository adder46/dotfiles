#!/bin/bash

# Applies realpath to ln's arguments
# Usage: rln OPTION SRC DEST

if [ $# -eq 0 ] || [ $# -gt 3 ]; then
    printf "Usage: rln OPTION SRC DEST\n"
    exit 1
fi

case $1 in
    -h|--hard) ln "$(realpath "$2")" "$(realpath "$3")" ;;
    -s|--soft) ln -s "$(realpath "$2")" "$(realpath "$3")" ;;
    *) printf "Possible options: --hard/--soft (-h/-s for short)\n" ;;
esac
